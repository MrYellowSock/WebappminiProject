    <!-- top-bar -->
    <div class="top-bar">
      <div class="text-center logo">Delivery Post</div>
    </div>
    <!-- status-bar -->

    <!-- post -->
    <div style="height:15vh "></div>
    <div class="container rounded bg-white p-4 my-form-card">
      <form action="/order/host/add" method="post">
        <label for="OwnerName">ชื่อ</label>
        <input type="text" id="OwnerName" name="OwnerName" required />

        <label for="OwnerContact">เบอร์โทรศัพท์</label>
        <input type="text" id="OwnerContact" name="OwnerContact" required />

        <label for="Location">อยู่ไหน</label>
        <input type="text" id="Location" name="Location" required />

        <label for="TargetLocation">จะไป</label>
        <input type="text" id="TargetLocation" name="TargetLocation" required />

        <label for="Closed">ตั้งเวลาปิดรับOrder</label>
        <input type="number" id="Closed" name="Closed" min="1" max="900" required />

        <input
          class="pink-button mt-4 mx-1"
          type="submit"
        />
        <input
          class="grey-button mx-1"
          type="button"
          onclick="alert('อิออก')"
          value="ยกเลิก"
        />
      </form>
    </div>

